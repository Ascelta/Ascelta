{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":timezone(Asia/Tokyo)"
  ],
  "labels": [
    "renovate-bot"
  ],
  "schedule": [
    "after 10pm every weekend",
    "every weekend",
    "before 5am every weekend"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "groupName": "Jest",
      "matchPackageNames": [
        "jest",
        "@types/jest"
      ]
    },
    {
      "groupName": "React Native",
      "matchPackageNames": [
        "react",
        "react-dom",
        "react-test-renderer",
        "react-native",
        "/^@react-native/",
        "@types/react",
        "@types/react-test-renderer"
      ],
      "automerge": false
    },
    {
      "groupName": "Babel",
      "matchPackageNames": [
        "/^babel/",
        "/^@babel/"
      ]
    },
    {
      "groupName": "matagui",
      "matchPackageNames": [
        "/^@matagui/"
      ]
    }
  ]
}
