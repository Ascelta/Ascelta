{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@app/*": [
        "apps/app/src/*"
      ],
      "@core/shared/*": [
        "packages/shared/src/*"
      ],
      "@core/infrastructure/*": [
        "packages/infrastructure/src/*"
      ],
      "@core/presentation/*": [
        "packages/presentation/src/*"
      ],
      "@core/usecase/*": [
        "packages/usecase/src/*"
      ],
      "@core/domain/*": [
        "packages/domain/src/*"
      ]
    }
  }
}
